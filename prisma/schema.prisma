datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Post {
    id        Int     @id @default(autoincrement())
    title     String?
    content   String?
    author    User?   @relation(fields: [authorId], references: [id])
    authorId  Int?
}

model User {
    id    Int       @id @default(autoincrement())
    email String?   @unique
    name  String?
    posts Post[]
}

model Jogador {
    id    Int     @id @default(autoincrement())
    nome  String?
    posicao String?
    altura String?
    peso String?
}

model Time {
    id    Int     @id @default(autoincrement())
    nome  String?
    data_inauguracao DateTime?
    estado String?
}